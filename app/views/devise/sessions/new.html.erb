<h2 class="center-align">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="col s12 m6 push-m3">
      <div class="input-field">
        <%= f.email_field :email, value: "admin@domain.com", autofocus: true, class: "validate" %>
        <%= f.label :email %>
      </div>
      <div class="input-field">
        <%= f.password_field :password, value: "password", autocomplete: "off", class: "validate" %>
        <%= f.label :password %>
      </div>
      <div class="input-field">
        <%= f.submit "Log in", class: "btn" %>
      </div>
    </div>
  </div>
<% end %>
